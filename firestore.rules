rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 문서는 인증된 사용자만 읽기 가능
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // 일정 문서는 인증된 사용자만 읽기/쓰기 가능
    match /events/{eventId} {
      allow read, write: if request.auth != null;
    }
  }
}